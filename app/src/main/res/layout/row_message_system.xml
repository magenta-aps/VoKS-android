<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UselessParent,SpUsage,RtlHardcoded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_chat_message_bottom"
    android:paddingLeft="@dimen/padding_chat_message_side"
    android:paddingRight="@dimen/padding_chat_message_side">

    <RelativeLayout
        android:id="@+id/rl_message_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_chat_system"
        android:minHeight="@dimen/chat_message_min_height">

        <TextView
            android:id="@+id/row_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_8"
            android:textSize="@dimen/text_normal"
            android:padding="@dimen/padding_chat_message_text"
            android:includeFontPadding="false" />
    </RelativeLayout>
</RelativeLayout>